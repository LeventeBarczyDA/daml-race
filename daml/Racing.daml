daml 1.2 
module Racing where 

import RacingTypes

template RegisteredRacer
  with 
    racer: Party 
    organizer: Party 
    --verifier: Party
    bibNumber: BibNumber 
    raceTitle: Text
    raceDate: Date
  where 
    signatory racer, organizer, --verifier 

    key (racer, RaceKey 
      with 
        organizer
        title = raceTitle
        date = raceDate ): (Party, RaceKey)
    maintainer key._2.organizer

